<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1595751866710-a6cb010fa20b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1611&q=80);">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>
 <div class="container">
    <div class="ingredient-wraper">
      <%= link_to 'Go back to the list', cocktails_path, class: 'btn btn-primary go-back-btn' %>
      <h4>List of ingredients</h4>
      <ul>
        <% @cocktail.doses.each do |dose| %>
        <li> <%= dose.ingredient.name %> | <%= dose.description  %><%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %><i class="fa fa-trash-alt ml-2"></i><% end %></li>
        <% end %>
      </ul>
      <%= link_to 'Add an ingredient',  new_cocktail_dose_path(@cocktail), class: 'btn btn-primary' %>
    </div>
  </div>




